#include <stdlib.h>

 struct Ship {
	int xOrigin;
	int yOrigin;
	int horizontal;
	int length;
	int* cellsDamaged; // [0,1,0,0,0] means that the second cell of the ship was hit
	int destroyed;

};


struct Ship* new_Ship(int length);
void flip(Ship* ship);
int attack(Ship* ship, int x, int y);
int isOverlapping(Ship* ship1, Ship* ship2);
int minDistance(Ship* ship, int x, int y);
int originDistance(Ship* ship, int x, int y);
void incrementShipCoordinates(int horizontal, int* shipX,int* shipY);
void drawShip(Ship* ship);
int absMin(int a, int b);
int abs(int a);
