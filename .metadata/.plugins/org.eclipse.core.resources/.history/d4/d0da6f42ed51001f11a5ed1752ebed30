
#include "letters.h"
#include <nds.h>

void printletter(unsigned short *fb, int letter, int y0, int x0, unsigned short color)
{
   char* l;
   switch(letter){
      case P: l = (char *)&lP; break;
      case BLANK: l = (char *)&lBLANK; break;
      case Q: l = (char *)&lQ; break;
      case R: l = (char *)&lR; break;
      case S: l = (char *)&lS; break;
      case T: l = (char *)&lT; break;
      default: l = (char *)&lBLANK; break;
   }
   int i,j;
   for(i = 0; i<letterH;i++)
      for(j = 0; j<letterW;j++)
	if (l[i*letterW+j] == 1)
	  fb[(i+y0)*256+j+x0] = color;
	else
	  fb[(i+y0)*256+j+x0] = BACKGROUND_COLOR;
}