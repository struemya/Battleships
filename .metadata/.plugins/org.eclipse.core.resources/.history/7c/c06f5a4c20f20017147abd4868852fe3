#include "Gameboard.h"
void addShip(Gameboard* gameboard, Ship* ship, int x, int y) {
	gameboard->ships[shipCount] =ship;
	gameboard->shipCount++;
}
void tryToMoveShipTo(Gameboard* gameboard, Ship* ship, int x, int y){
	if(originDistance(ship,x,y)==1) {
		int i;
		bool overlapping;

		for(i=0;i<gameboard->shipCount;i++){
			overlapping = isOverlapping(gameboard->ships[i],*ship);
			if (overlapping) return;
		}
		ship->xOrigin =x;
		ship->yOrigin =y;
	}
}
