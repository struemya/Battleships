#include "Gameplay.h"
#include "Gameboard.h"

Gameboard* gameboard;
Ship* activeShip;


void placeShips() {
Ship* ship =new_Ship(2);

addShip(gameboard,ship);
draw(gameboard);
tryToMoveShipTo(gameboard,ship,1,0);
tryToMoveShipTo(gameboard,ship,2,0);
//draw(gameboard);
activeShip =ship;
Ship* ship2 =new_Ship(3);

addShip(gameboard,ship);
draw(gameboard);




}
void initGameboard(){
	gameboard =new_Gameboard();
}

void Gameplay_handleInput(enum ACTION a)
{
	int x = activeShip->xOrigin;
	int y = activeShip->yOrigin;

    switch (a)
    {
        case UP:

            y--;
            break;
        case DOWN:

            y++;
            break;
        case RIGHT:
            x++;
            break;
        case LEFT:
            x--;
            break;
        case SELECT:
        	placeShips();
        	return;
            break;
        default:
            break;


    }
    tryToMoveShipTo(gameboard,activeShip,x,y);
    draw(gameboard);

}
